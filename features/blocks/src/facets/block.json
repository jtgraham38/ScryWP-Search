{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"title": "Search Facets",
	"keywords": [
		"search",
		"facets",
		"filters"
	],
	"name": "scry-search/facets",
	"version": "0.1.0",
	"category": "widgets",
	"icon": "filter",
	"description": "Block containing filters for use in facetted search",
	"example": {},
	"supports": {
		"html": false,
		"interactivity": true,
		"color": {
			"background": true,
			"text": true
		},
		"typography": {
			"fontSize": true
		},
		"spacing": {
			"padding": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalSkipSerialization": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		}
	},
	"attributes": {
		"facets": {
			"type": "object",
			"default": {
				"taxonomies": {},
				"meta": {}
			}
		},
		"searchFormClassName": {
			"type": "string",
			"default": ""
		},
		"displayLayout": {
			"type": "string",
			"default": "column"
		},
		"gridColumns": {
			"type": "number",
			"default": 3
		},
		"textColor": {
			"type": "string",
			"default": ""
		},
		"backgroundColor": {
			"type": "string",
			"default": ""
		},
		"fontSize": {
			"type": "string",
			"default": ""
		},
		"style": {
			"type": "object",
			"default": {
				"elements": {
					"button": {
						"color": {
							"text": "#ffffff",
							"background": "#000000"
						}
					}
				}
			}
		}
	},
	"textdomain": "scry-search",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScriptModule": "file:./view.js"
}